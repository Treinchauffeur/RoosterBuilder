<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        app:menu="@menu/menu"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Roosterbot"
        app:titleTextAppearance="@style/TextAppearance.Material3.DisplayLarge"
        app:titleTextColor="?attr/colorOnSecondaryContainer" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSelectFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Selecteer bestand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mainCard"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonSelectFile"
        app:strokeColor="?attr/colorSurfaceContainerHighest"
        app:strokeWidth="1dp">

        <ScrollView
            android:id="@+id/scrollViewMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:scrollbarSize="0dp"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/weekText"
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center_horizontal"
                    android:text="Week NaN van jaar NaN (ERROR)" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/pupilsText"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Aspiranten (NaN):" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:requiresFadingEdge="vertical"
                    android:fadingEdgeLength="30dp">

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/pupilsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    app:flexWrap="wrap"
                    app:justifyContent="space_evenly">

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:text="ERROR!" />

                    </com.google.android.flexbox.FlexboxLayout>

                </ScrollView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mentorsText"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Mentoren (NaN):" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:requiresFadingEdge="vertical"
                    android:fadingEdgeLength="30dp">

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/mentorsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    app:flexWrap="wrap"
                    app:justifyContent="space_evenly">

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:enabled="false"
                            android:text="ERROR!" />

                    </com.google.android.flexbox.FlexboxLayout>

                </ScrollView>

            </LinearLayout>
        </ScrollView>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Opslaan als PDF en XLSX (inop.)"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainCard" />

</androidx.constraintlayout.widget.ConstraintLayout>